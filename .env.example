# G-Pilot Environment Variables
# Copy this file to .env.local and fill in your actual values
# .env.local is git-ignored and will not be committed

# ============================================================================
# Google API Configuration
# ============================================================================

# Google API Key - Used for Gemini, PageSpeed Insights, YouTube Data API
# Get it at: https://console.cloud.google.com/apis/credentials
GOOGLE_API_KEY=your-google-api-key-here

# ============================================================================
# Google Cloud Project (Vertex AI)
# ============================================================================

# Required for Veo 3.1 video generation, Imagen, and other Vertex AI services
# Get your project ID at: https://console.cloud.google.com/
GOOGLE_CLOUD_PROJECT=your-project-id-here
VERTEX_AI_LOCATION=us-central1

# Google Service Account Credentials (for Vertex AI, Drive, Search Console, etc.)
# Create service account at: https://console.cloud.google.com/iam-admin/serviceaccounts
# Download JSON key and extract these fields:
GOOGLE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----"

# Optional: Google Cloud Storage bucket for video storage
VEO_STORAGE_BUCKET=gs://your-bucket-name/videos/

# ============================================================================
# Database Configuration
# ============================================================================

# PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://user:password@localhost:5432/g_pilot_dev"

# Supabase Configuration (for build compatibility)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# ============================================================================
# SEO & Marketing API Keys
# ============================================================================

# SEMrush API - Keyword research, competitor analysis, backlinks, rankings
# Get your API key at: https://www.semrush.com/api-documentation/
SEMRUSH_API_KEY=your-semrush-api-key-here

# Moz API - Domain authority, page authority, backlink data
# Get your credentials at: https://moz.com/products/api
MOZ_ACCESS_ID=your-moz-access-id
MOZ_SECRET_KEY=your-moz-secret-key

# Ahrefs API - Alternative SEO metrics (backlinks, keywords, rankings)
# Get your API key at: https://ahrefs.com/api
AHREFS_API_KEY=your-ahrefs-api-key-here

# Google PageSpeed Insights API (uses GOOGLE_API_KEY above)
# No additional key needed - automatically uses GOOGLE_API_KEY

# ============================================================================
# Social Media Platform Credentials
# ============================================================================

# Instagram Graph API
# Get credentials at: https://developers.facebook.com/
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret

# Twitter API v2
# Get credentials at: https://developer.twitter.com/
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# Facebook Graph API
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# LinkedIn API
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# TikTok API
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret

# YouTube Data API (uses GOOGLE_API_KEY above)
# No additional key needed - automatically uses GOOGLE_API_KEY

# ============================================================================
# Authentication & Security
# ============================================================================

# Clerk Authentication (if using Clerk)
# Get your keys at: https://dashboard.clerk.com/
# NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx
# CLERK_SECRET_KEY=sk_test_xxx

# ============================================================================
# Optional Services
# ============================================================================

# Redis (for BullMQ job queue)
# REDIS_URL=redis://localhost:6379

# Firebase (for agent persistence)
# FIREBASE_PROJECT_ID=your-firebase-project
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"

# Stripe (for payments)
# STRIPE_SECRET_KEY=sk_test_xxx
# STRIPE_WEBHOOK_SECRET=whsec_xxx
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# ============================================================================
# Development & Debugging
# ============================================================================

# Node Environment (development | production | test)
NODE_ENV=development

# Enable debug logging
# DEBUG=true

# API Rate Limiting
# RATE_LIMIT_MAX=100
# RATE_LIMIT_WINDOW_MS=60000
